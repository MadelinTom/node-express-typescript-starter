{
  "name": "node-express-typescript-starter",
  "version": "1.0.0",
  "description": "Node server starter template using typescript and nodemon",
  "main": "index.js",
  "scripts": {
    "start": "node --inspect=10858 -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "build": "tsc"
  },
  "author": "Tom Madelin",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.12",
    "eslint": "^7.2.0",
    "eslint-plugin-import": "^2.21.1",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}